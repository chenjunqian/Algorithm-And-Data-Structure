#include <stdio.h>
#include <stdlib.h>

/**
 * insertion sort solution
 */
void insert(int *data, int size) {

	int i, temp;

	for (i = 1; i < size; i++) {
		if (data[i] < data[i - 1]) {
			temp = data[i];
			int j = i;
			while (j > 0 && temp < data[j - 1]) {
				data[j] = data[j - 1];
				j--;
			}

			data[j] = temp;
		}
	}
}

int main(void) {
	puts("!!!Hello World!!!"); /* prints !!!Hello World!!! */
	return EXIT_SUCCESS;
}
